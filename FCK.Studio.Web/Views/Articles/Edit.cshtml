<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        内容编辑
        <small>Article Edit</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="/Articles/" name="navlink">内容管理</a></li>
        <li class="active">内容编辑</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="box box-primary" id="formArticleEdit">
        <div class="box-header with-border">
            <h3 class="box-title">文章编辑</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form role="form">
            <div class="box-body">
                <div class="form-group">
                    <label for="ParentId">所属分类</label>
                    <select class="form-control" v-model="Article.CategoryId">
                        <option v-for="option in Category" v-bind:value="option.Id">{{option.CategoryName}}</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="Title">标题</label>
                    <input type="text" class="form-control" v-model="Article.Title" placeholder="Enter title">
                </div>
                <div class="form-group">
                    <label for="Keywords">关键词</label>
                    <input type="text" class="form-control" v-model="Article.Keywords" placeholder="Enter Keywords">
                </div>
                <div class="form-group">
                    <label for="Tags">标签</label>
                    <input type="text" class="form-control" v-model="Article.Tags" placeholder="Enter Tags">
                </div>
                <div class="form-group">
                    <label for="Author">作者</label>
                    <input type="text" class="form-control" v-model="Article.Author" placeholder="Enter Author">
                </div>
                <div class="form-group">
                    <label for="Intro">简介</label>
                    <textarea class="form-control" v-model="Article.Intro" placeholder="add multiple lines"></textarea>
                </div>
                <div class="form-group">
                    <div id="uploader" class="wu-example">
                        <!--用来存放文件信息-->
                        <div id="thelist" class="uploader-list"></div>
                        <div class="btns">
                            <div id="picker">选择文件</div>
                            <button id="PickBtn" class="btn btn-default"  v-on:click="filePick">开始上传</button>
                        </div>
                    </div>
                </div>
                <div class="checkbox">
                    <label>
                        <input type="checkbox" v-model="Article.IsRecommend"> 推荐
                    </label>
                    <label>
                        <input type="checkbox" v-model="Article.IsHot"> 热
                    </label>
                    <label>
                        <input type="checkbox" v-model="Article.IsTop"> 置顶
                    </label>
                </div>
                <vue-html5-editor :content="Article.Contents" :height="300" ref="editor" v-model="Article.Contents" v-on:change="updateData"></vue-html5-editor>
                <div class="form-group">
                    <label for="LinkUrl">外部链接</label>
                    <input type="text" class="form-control" v-model="Article.LinkUrl" placeholder="Enter LinkUrl">
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <input type="hidden" v-model="Article.Id">
                <input type="hidden" v-model="Article.CreationTime">
                <button type="button" class="btn btn-primary" v-on:click="dosubmit">发布</button>
                <button type="button" class="btn btn-default" v-on:click="doback">返回</button>
            </div>
        </form>
    </div>
</section>
<!-- /.content -->
<script>

    var _Id = localStorage.PageId == null ? 0 : localStorage.PageId;
    $.post('/Articles/GetModelWithCategory', { id: _Id }, function (response) {
        Vue.use(VueHtml5Editor, {
            showModuleName: false
        })
        new Vue({
            el: "#formArticleEdit",
            data: function (){ return response },
            methods: {
                updateData: function (data) {
                    response.Article.Contents = data;
                },
                updateImg: function (data) {
                    response.Article.Images = data;
                },
                filePick: function () {
                    $(".webuploader-element-invisible").click();
                },
                dosubmit: function () {
                    response.Article.Contents = escape(response.Article.Contents);
                    $.ajax({
                        url: '/Articles/InsertOrUpdate',
                        type: "POST",
                        data: response.Article,
                        success: function (data) {
                            toastr.success('保存成功！');
                        }
                    });
                    return false;
                },
                doback: function () {
                    getURL('/Articles/', 'content-wrapper');
                }
            }
        })
    });

    var uploader = WebUploader.create({
        auto: true, // 选完文件后，是否自动上传 
        swf: '/bower_components/webuploader/Uploader.swf', // swf文件路径 
        server: 'upload.php', // 文件接收服务端 
        pick: '#PickBtn', // 选择文件的按钮。可选
        // 只允许选择图片文件。 
        accept: {
            title: 'Images',
            extensions: 'jpg,jpeg,png',
            mimeTypes: 'image/jpg,image/jpeg,image/png'
        },
        thumb: {
            type: 'image/jpg,jpeg,png'
        },
        fileNumLimit: 8, //限制上传个数
        fileSingleSizeLimit: 2048000 //限制单个上传图片的大小
    });
</script>
