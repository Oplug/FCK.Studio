@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_LayoutPageInner.cshtml";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        内容编辑
        <small>Article Edit</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Home/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">内容管理</a></li>
        <li class="active">内容编辑</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="box box-primary" id="formArticleEdit">
        <div class="box-header with-border">
            <h3 class="box-title">文章编辑</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form role="form" class="form-horizontal">
            <div class="box-body">
                <div class="nav-tabs-custom">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#tab_1" data-toggle="tab" aria-expanded="true">基本属性</a></li>
                        <li class=""><a href="#tab_2" data-toggle="tab" aria-expanded="false">内容属性</a></li>
                        <li class=""><a href="#tab_3" data-toggle="tab" aria-expanded="false">报名参数</a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab_1">
                            <div class="form-group">
                                <label for="ParentId" class="col-sm-2 control-label">所属分类</label>
                                <div class="col-sm-3">
                                    <select class="form-control CategoryId" v-model="Article.CategoryId">
                                        <option v-for="option in Category" v-bind:value="option.Id">{{option.PrevStr}} {{option.CategoryName}}</option>
                                    </select>
                                </div>
                                <label for="IsRecommend" class="col-sm-2 control-label">属性</label>
                                <div class="col-sm-4">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" v-model="Article.IsRecommend"> 推荐
                                        </label>
                                        <label>
                                            <input type="checkbox" v-model="Article.IsHot"> 热
                                        </label>
                                        <label>
                                            <input type="checkbox" v-model="Article.IsTop"> 置顶
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="Title" class="col-sm-2 control-label">标题</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" v-model="Article.Title" placeholder="Enter title">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="Keywords" class="col-sm-2 control-label">关键词</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" v-model="Article.Keywords" placeholder="Enter Keywords">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="Tags" class="col-sm-2 control-label">标签</label>
                                <div class="col-sm-3">
                                    <input type="text" class="form-control" v-model="Article.Tags" placeholder="Enter Tags">
                                </div>
                                <label for="Author" class="col-sm-2 control-label">作者</label>
                                <div class="col-sm-4">
                                    <input type="text" class="form-control" v-model="Article.Author" placeholder="Enter Author">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="Intro" class="col-sm-2 control-label">简介</label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" v-model="Article.Intro" placeholder="add multiple lines"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="LinkUrl" class="col-sm-2 control-label">外部链接</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" v-model="Article.LinkUrl" placeholder="Enter LinkUrl">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="Images" class="col-sm-2 control-label">图片上传</label>
                                <div class="col-sm-5">
                                    <input type="hidden" v-model="Article.Images">
                                    <input type="file" id="fileUpload" name="fileUpload" />
                                </div>
                                <div class="col-sm-5">
                                    <img v-bind:src="Article.Images" class="img-rounded" height="30" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="UpdateTime" class="col-sm-2 control-label">更新时间</label>
                                <div class="col-sm-5">
                                    <input type="text" class="form-control" v-model="Article.UpdateTime" placeholder="Enter UpdateTime">
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="tab_2">
                            <div class="form-group">
                                <div class="col-sm-12">
                                    <textarea class="hidden">{{Article.Contents}}</textarea>
                                    <vue-html5-editor v-bind:content="Article.Contents" height="300" ref="editor" v-on:change="updateData" v-model="Article.Contents"></vue-html5-editor>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="tab_3">
                            <div class="form-group">
                                <label for="LimitSignUp" class="col-sm-2 control-label">报名限额</label>
                                <div class="col-sm-4">
                                    <input type="number" class="form-control" v-model="Article.LimitSignUp">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="LinkUrl" class="col-sm-2 control-label">截至日期</label>
                                <div class="col-sm-4">
                                    <input type="text" class="form-control" v-model="Article.SignUpEndTime">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="LinkUrl" class="col-sm-2 control-label">已报名人数</label>
                                <div class="col-sm-4">
                                    <input type="number" class="form-control" v-model="Article.SignUpNums">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <input type="hidden" v-model="Article.Id">
                <input type="hidden" v-model="Article.CreationTime">
                <button type="button" class="btn btn-primary pull-right" v-on:click="dosubmit">发布</button>
                <a href="/Articles/" class="btn btn-default">返回</a>
            </div>
        </form>
    </div>
</section>
<!-- /.content -->
@section css{
    <link rel="stylesheet" href="/Content/bower_components/pekeUpload/css/custom.css" />
    <link rel="stylesheet" href="/Content/bower_components/select2/dist/css/select2.min.css">
}
@section scripts{
    <script src="/Content/bower_components/pekeUpload/js/pekeUpload.js"></script>
    <script src="/Content/dist/js/vue-html5-editor.js"></script>
    <script src="/Content/bower_components/select2/dist/js/select2.full.min.js"></script>
    <script>
        var _Id = '@(ViewBag.Id)';
        $.post('/Articles/GetModelWithCategory', { id: _Id }, function (response) {
            if (response.Article.Author == null)
                response.Article.Author = "admin"
            Vue.use(VueHtml5Editor, {
                showModuleName: false,
                image: {
                    sizeLimit: 1920 * 1080,
                    upload: {
                        url: "/ashx/upload.ashx",
                        headers: {},
                        params: {},
                        fieldName: 'file'
                    },
                    uploadHandler(responseText) {
                        var json = JSON.parse(responseText)
                        if (json.error == 1) {
                            alert(json.message)
                        } else {
                            return 'http://mage.oplug.cn' + json.url
                        }
                    }
                }
            })
            var vm = new Vue({
                el: "#formArticleEdit",
                data: function () { return response },
                methods: {
                    updateData: function (data) {
                        response.Article.Contents = data;
                    },
                    initUpload: function () {
                        $("#fileUpload").pekeUpload({
                            onSubmit: false,
                            maxSize: 1,
                            theme: 'bootstrap',
                            btnText: "选择图片...",
                            url: "/ashx/upload.ashx",
                            showErrorAlerts: false,
                            showFilename: false,
                            allowedExtensions: "jpeg|jpg|png|gif",
                            onFileError: function (file, error) {
                                toastr.error("error on file: " + file.name + " error: " + error + "")
                            },
                            onFileSuccess: function (file, data) {
                                toastr.success("上传成功");
                                response.Article.Images = data.url;
                            }
                        });
                        $('.select2').select2();
                    },
                    dosubmit: function () {
                        //response.Article.Contents = escape(response.Article.Contents);
                        $.ajax({
                            url: '/Articles/CreateOrUpdate',
                            type: "POST",
                            data: response.Article,
                            success: function (data) {
                                if (data.code == 100) {
                                    toastr.success('保存成功！');
                                }
                                else
                                    toastr.error(data.message);
                            }
                        });
                        return false;
                    }
                }
            })
            vm.initUpload();
        });
    </script>
}