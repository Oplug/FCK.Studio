}
<script src="/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
<script>
    $(function () {
        $.post('/Articles/GetLists', { page: 1, pageSize: 0 }, function (response) {            
            var vm = new Vue({
                el: '#DataTable',
                data: {
                    mydata: response.datas
                },
                methods: {
                    initDatas: function () {
                        //setDataTable('DataTable');
                        $('#DataTable').dataTable({
                            "order": [[3, "desc"]],
                            'language': DataTableLanguage
                        });
                    },
                    udelete: function (_id) //删除
                    {
                        confirmE('确定删除？', function () {
                            $.ajax({
                                url: '/Articles/Del',
                                type: "POST",
                                data: { id: _id },
                                success: function (resp) {
                                    $.alert('删除成功!');
                                    getURL('/Articles/', 'content-wrapper');
                                }
                            });
                        });
                    },
                    updateu: function (_id) //更新
                    {
                        localStorage.PageId = _id;
                        getURL('/Articles/Edit', 'content-wrapper');
                    }
                }
            });
            vm.initDatas();
        });
        
    })
</script>
