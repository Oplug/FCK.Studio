@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_LayoutPageInner.cshtml";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        内容管理
        <small>Article Manage</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Home/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">内容管理</li>
    </ol>
</section>
<!-- Main content -->
<section class="content" id="DataTable">
    <div class="box">
        <div class="box-header  with-border">
            <div class="btn-group">
                <button type="button" class="btn btn-default btn-sm"><i class="fa fa-trash-o"></i></button>
                <button type="button" class="btn btn-default btn-sm"><i class="fa fa-reply"></i></button>
                <button type="button" class="btn btn-default btn-sm"><i class="fa fa-share"></i></button>
            </div>
            <!-- /.btn-group -->
            <button type="button" class="btn btn-default btn-sm" onclick="GetDataList()"><i class="fa fa-refresh"></i></button>
            <input type="hidden" value="1" id="pageindex" />
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>标题</th>
                        <th>分类</th>
                        <th>推荐</th>
                        <th>更新时间</th>
                        <th>创建时间</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    <tr v-for="item in mydata">
                        <td>{{item.Id}}</td>
                        <td>{{item.Title}}</td>
                        <td>{{item.Category.CategoryName}}</td>
                        <td><a v-bind:class="item.IsRecommend? 'badge bg-green' : 'badge bg-red'" v-on:click="recommend(item.Id)">{{item.IsRecommend}}</a></td>
                        <td><small>{{item.UpdateTime}}</small></td>
                        <td><small>{{item.CreationTime}}</small></td>
                        <td>
                            <a class="btn btn-danger btn-xs" href="#" v-on:click="udelete(item.Id)">删除</a>
                            <a class="btn btn-primary btn-xs" href="#" v-on:click="updateu(item.Id)">编辑</a>
                        </td>
                    </tr>
                </tbody>

            </table>
        </div>
        <!-- /.box-body -->
    </div>
    <div class="box-footer clearfix">        
        <ul class="pagination pagination-sm no-margin pull-right">
            <li v-bind:class="pageindex<=1? 'hidden' : ''"><a href="#" onclick="turnpage(-1)">&laquo;</a></li>
            <li v-for="value in pages" v-bind:class="value==pageindex? 'active' : ''"><a href="#" v-on:click="chgpage(value)">{{value}}</a></li>
            <li v-bind:class="pageindex==totalpages? 'hidden' : ''"><a href="#" onclick="turnpage(1)">&raquo;</a></li>
        </ul>
    </div>
</section>
<!-- /.content -->
@section css{
    <!-- DataTables -->
    <link rel="stylesheet" href="/Content/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
}
@section scripts{
    <script src="/Content/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="/Content/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script>
        $(function () {

        })
        var vm = new Vue({
            el: '#DataTable',
            data: {
                mydata: [],
                pages: 0,
                totalpages: 0,
                pageindex: 1
            },
            methods: {
                udelete: function (_id) //删除
                {
                    confirmE('确定删除？', function () {
                        $.ajax({
                            url: '/Articles/Del',
                            type: "POST",
                            data: { id: _id },
                            success: function (resp) {
                                $.alert('删除成功!');
                                window.location.reload();
                            }
                        });
                    });
                },
                updateu: function (_id) //更新
                {
                    window.location = '/Articles/Edit/' + _id;
                },
                recommend: function (_id) {
                    $.post('/Articles/Recommend', { ids: _id }, function (response) {
                        if (response.code == 100) {
                            GetDataList();
                        }
                        else
                            $.alert(response.message);
                    });
                    return false;
                },
                chgpage: function (p) {
                    $('#pageindex').val(p);
                    GetDataList();
                    return false;
                }
            }
        });
        GetDataList();

        function GetDataList() {
            var _page = parseInt($('#pageindex').val())
            $.post('/Articles/GetLists', { page: _page, pageSize: 10 }, function (response) {
                Vue.set(vm, 'mydata', response.datas);
                Vue.set(vm, 'totalpages', response.pages)
                Vue.set(vm, 'pages', response.pages > 10 ? 10 : response.pages)
                Vue.set(vm, 'pageindex', _page)
            });
            //$('#DataTable').dataTable({
            //    "order": [[3, "desc"]],
            //    'language': DataTableLanguage
            //});
        }
        function turnpage(val) {
            var _page = parseInt($('#pageindex').val());
            _page = _page + val;
            $('#pageindex').val(_page);
            GetDataList();
            return false;
        }
    </script>
}