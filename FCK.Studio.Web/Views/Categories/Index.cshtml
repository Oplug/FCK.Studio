@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_LayoutPageInner.cshtml";
}  
<section class="content-header">
    <h1>
        分类管理
        <small>Category Manage</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Home/Dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">分类管理</li>
    </ol>
</section>
<section class="content">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">所有分类</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body no-padding">
            <table class="table table-condensed table-hover" id="DataTable">
                <tr>
                    <th></th>
                    <th>分类名称</th>
                    <th>分类索引</th>
                    <th>层级</th>
                    <th>所属模型</th>
                    <th style="width: 100px">操作</th>
                </tr>
                <tr v-for="item in mydata">
                    <td style="width:30px"><input type="checkbox"  v-bind:value="item.Id" /></td>
                    <td>{{item.PrevStr}} <span v-bind:class="item.Icons"></span> {{item.CategoryName}}</td>
                    <td>{{item.CategoryIndex}}</td>
                    <td>{{item.Level}}</td>
                    <td>{{item.Layout}}</td>
                    <td>
                        <a class="btn btn-danger btn-xs" href="#" v-on:click="udelete(item.Id)">删除</a>
                        <a class="btn btn-primary btn-xs" href="#" v-on:click="updateu(item.Id)">编辑</a>
                    </td>
                </tr>                
            </table>
        </div>
        <!-- /.box-body -->
        <div class="box-footer clearfix no-border">
            <a href="/Categories/Edit/0" class="btn btn-default pull-right"><i class="fa fa-plus"></i> 添加分类</a>
        </div>
    </div>
</section>
@section css{
    <link rel="stylesheet" href="/Content/plugins/iCheck/all.css">
    <link rel="stylesheet" href="/Content/bower_components/select2/dist/css/select2.min.css">
}
@section scripts{
<script src="/Content/plugins/iCheck/icheck.min.js"></script>
<script>
    var LocalDatas = {
        mydata: [],
        total:0
    }
    function GetDatas () {        
        $.post('/Categories/GetTreeList', { layout: '@(Request.QueryString["lay"])' }, function (response) {
            LocalDatas.mydata = response.datas;
            LocalDatas.total = response.total;
        })
    }
    GetDatas();
    var vm = new Vue({
        el: '#DataTable',
        data: LocalDatas,
        methods: {
            udelete: function (_id) //删除
            {
                confirmE('确定删除？', function () {
                    $.ajax({
                        url: '/Categories/Del',
                        type: "POST",
                        data: { id: _id },
                        success: function (resp) {
                            $.alert('删除成功!');
                            GetDatas();
                        }
                    });
                });
            },
            updateu: function (_id) {
                window.location = '/Categories/Edit/' + _id;
            }
        }
    })
</script>
}