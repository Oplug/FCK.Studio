                                <div class="btn-group w80">
                                    <button class="btn btn-danger btn-xs" type="button" v-on:click="udelete(item.Id)">删除</button>
                                    <button class="btn btn-success btn-xs" type="button" v-on:click="update(item)">保存</button>
                                </div>
                            </td>
