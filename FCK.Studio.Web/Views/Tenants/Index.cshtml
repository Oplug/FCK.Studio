<section class="content-header">
    <h1>
        站点管理
        <small>Tenants Manage</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Home/Dashboard" name="syclink"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">站点管理</li>
    </ol>
</section>
<section class="content">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">所有租户</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body no-padding">
            <table class="table table-condensed" id="DataTable">
                <tr>
                    <th style="width: 20px"> </th>
                    <th>站点名称</th>
                    <th>微信公众号</th>
                    <th>创建时间</th>
                    <th style="width: 100px">操作</th>
                </tr>
                <tr v-for="item in mydata">
                    <td><input type="checkbox" value="{{item.Id}}" /></td>
                    <td>{{item.TenantName}}</td>
                    <td>{{item.WXAppId}}</td>
                    <td>{{item.CreationTime}}</td>
                    <td>
                        <a class="btn btn-danger btn-xs" href="#" v-on:click="udelete(item.Id)">删除</a>
                        <a class="btn btn-primary btn-xs" href="#" v-on:click="updateu(item.Id)">编辑</a>
                    </td>
                </tr>
            </table>
        </div>
        <!-- /.box-body -->
        <div class="box-footer clearfix no-border">
            <button type="button" class="btn btn-default pull-right" onclick="AddModel(0)"><i class="fa fa-plus"></i> 添加站点</button>
        </div>
    </div>
</section>
<script>
    function AddModel(_id) {
        localStorage.PageId = _id;
        getURL('/Tenants/Edit', 'content-wrapper');
    }
    $(function () {

        $.post('/Tenants/GetLists', { page: 1, pageSize: 0 }, function (response) {
            var vm = new Vue({
                el: '#DataTable',
                data: {
                    mydata: response.datas
                },
                methods: {
                    udelete: function (_id) //删除
                    {
                        confirmE('确定删除？', function () {
                            $.ajax({
                                url: '/Tenants/Del',
                                type: "POST",
                                data: { id: _id },
                                success: function (resp) {
                                    $.alert('删除成功!');
                                    getURL('/Tenants/', 'content-wrapper');
                                }
                            });
                        });
                    },
                    updateu: function (_id) //更新
                    {
                        localStorage.PageId = _id;
                        getURL('/Tenants/Edit', 'content-wrapper');
                    }
                }
            });
        });

    })
</script>