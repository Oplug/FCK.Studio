@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_LayoutPageInner.cshtml";
}  
<section class="content-header">
    <h1>
        站点管理
        <small>Tenants Manage</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Home/Dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">站点管理</li>
    </ol>
</section>
<section class="content">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">所有站点</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body no-padding">
            <table class="table table-condensed" id="DataTable">
                <tr>
                    <th style="width: 20px"> </th>
                    <th>站点名称</th>
                    <th>微信AppID</th>                   
                    <th style="width: 100px">操作</th>
                </tr>
                <tr v-for="item in mydata">
                    <td><input type="checkbox" value="item.Id" /></td>
                    <td>
                        <a v-bind:href="item.AppDomain" target="_blank"><i class="fa fa-external-link text-info"></i></a>
                        {{item.TenantName}} <span v-if="item.IsRoot" class="text-green"><i class="fa fa-globe" title="主站点"></i></span>                    
                    </td>
                    <td>{{item.WXAppId}}</td>
                    <td>
                        <a class="btn btn-danger btn-xs" href="#" v-on:click="udelete(item.Id)">删除</a>
                        <a class="btn btn-primary btn-xs" href="#" v-on:click="updateu(item.Id)">编辑</a>
                    </td>
                </tr>
            </table>
        </div>
        <!-- /.box-body -->
        <div class="box-footer clearfix no-border">
            <a href="/Tenants/Edit/0" class="btn btn-default pull-right" onclick="AddModel(0)"><i class="fa fa-plus"></i> 添加站点</a>
        </div>
    </div>
</section>
@section scripts{
<script>
    var LocalDatas = {
        mydata: {}
    }
    GetDatas();
    function GetDatas() {
        $.post('/Tenants/GetLists', { page: 1, pageSize: 0 }, function (response) {
            LocalDatas.mydata = response.datas;
        });
    }
    var vm = new Vue({
        el: '#DataTable',
        data: LocalDatas,
        methods: {
            udelete: function (_id) //删除
            {
                confirmE('确定删除？', function () {
                    $.ajax({
                        url: '/Tenants/Del',
                        type: "POST",
                        data: { id: _id },
                        success: function (resp) {
                            $.alert('删除成功!');
                            GetDatas();
                        }
                    });
                });
            },
            updateu: function (_id) {
                window.location = '/Tenants/Edit/' + _id;
            }
        }
    });
</script>
}