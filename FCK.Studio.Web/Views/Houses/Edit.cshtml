
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPageInner.cshtml";
}
<section class="content-header">
    <h1>
        房屋管理
        <small>Election Manage</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Home/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">房屋管理</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="box box-primary" id="formArticleEdit">
        <div class="box-header with-border">
            <h3 class="box-title">编辑</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->

        <form role="form" class="form-horizontal" id="formEdit">
            <div class="box-body">
                <div class="form-group">
                    <label for="CategoryId" class="col-sm-2 control-label">社区名称</label>
                    <div class="col-sm-3">
                        <select class="form-control CategoryId" v-model="Model.CategoryId">
                            <option v-for="option in Category" v-bind:value="option.Id">{{option.PrevStr}} {{option.CategoryName}}</option>
                        </select>
                    </div>
                    <label for="HouseName" class="col-sm-2 control-label">楼盘名称</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" v-model="Model.HouseName" placeholder="Enter HouseName">
                    </div>
                </div>
                <div class="form-group">
                    <label for="UnitNum" class="col-sm-2 control-label">单元号</label>
                    <div class="col-sm-3">
                        <input type="text" class="form-control" v-model="Model.UnitNum" placeholder="Enter UnitNum">
                    </div>
                    <label for="DoorCard" class="col-sm-2 control-label">门牌号</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" v-model="Model.DoorCard" placeholder="Enter DoorCard">
                    </div>
                </div>
                <div class="form-group">
                    <label for="HouseType" class="col-sm-2 control-label">房屋属性</label>
                    <div class="col-sm-3">
                        <select class="form-control HouseType" v-model="Model.HouseType" placeholder="Enter HouseType">
                            <option value="住宅">住宅</option>
                            <option value="商铺">商铺</option>
                            <option value="商业">商业</option>
                        </select>
                    </div>
                    <label for="HouseArea" class="col-sm-2 control-label">房屋面积</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" v-model="Model.HouseArea" placeholder="Enter HouseArea">
                    </div>
                </div>
                <div class="form-group">
                    <label for="SaleStatus" class="col-sm-2 control-label">销售状态</label>
                    <div class="col-sm-3">
                        <select class="form-control SaleStatus" v-model="Model.SaleStatus" placeholder="Enter SaleStatus">
                            <option value="已售">已售</option>
                            <option value="未售">未售</option>
                        </select>
                    </div>
                    <label for="BuildStatus" class="col-sm-2 control-label">已建未建</label>
                    <div class="col-sm-4">
                        <select class="form-control BuildStatus" v-model="Model.BuildStatus" placeholder="Enter BuildStatus">
                            <option value="已建">已建</option>
                            <option value="未建">未建</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="Owner" class="col-sm-2 control-label">产权所有人1</label>
                    <div class="col-sm-3">
                        <input type="text" class="form-control" v-model="Model.Owner" placeholder="Enter Owner">
                    </div>
                    <label for="Owner2" class="col-sm-2 control-label">产权所有人2</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" v-model="Model.Owner2" placeholder="Enter Owner2">
                    </div>
                </div>

                <div class="form-group">
                    <label for="Owne3r" class="col-sm-2 control-label">产权所有人3</label>
                    <div class="col-sm-3">
                        <input type="text" class="form-control" v-model="Model.Owner3" placeholder="Enter Owner3">
                    </div>
                    <label for="Owner4" class="col-sm-2 control-label">产权所有人4</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" v-model="Model.Owner4" placeholder="Enter Owner4">
                    </div>
                </div>
                <div class="form-group">
                    <label for="Owner5" class="col-sm-2 control-label">产权所有人5</label>
                    <div class="col-sm-3">
                        <input type="text" class="form-control" v-model="Model.Owner5" placeholder="Enter Owner5">
                    </div>
                    <label for="HhdRegister" class="col-sm-2 control-label">是否户籍户</label>
                    <div class="col-sm-3">
                        <label>
                            <input type="checkbox" v-model="Model.HhdRegister"> 是
                        </label>
                    </div>
                </div>

                <div class="form-group">
                    <label for="ShortChar1" class="col-sm-2 control-label">网格名称</label>
                    <div class="col-sm-3">
                        <input type="text" class="form-control" v-model="Model.ShortChar1" placeholder="Enter ShortChar1">
                    </div>
                    <label for="ShortChar2" class="col-sm-2 control-label">网格员</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" v-model="Model.ShortChar2" placeholder="Enter ShortChar2">
                    </div>
                </div>
                <div class="form-group">
                    <label for="Memo" class="col-sm-2 control-label">备注</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" v-model="Model.Memo" placeholder="Enter Memo">
                    </div>
                </div>

            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="button" class="btn btn-primary" v-on:click="dosubmit">确定</button>
                <a href="/Houses/" class="btn btn-default">返回</a>
            </div>
        </form>
    </div>
</section>
<!-- /.content -->
@section css{
    <link rel="stylesheet" href="/Content/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css">
    <link rel="stylesheet" href="/Content/bower_components/pekeUpload/css/custom.css" />
    <link rel="stylesheet" href="/Content/bower_components/select2/dist/css/select2.min.css">
}
@section scripts{
    <script src="/Content/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
    <script src="/Content/bower_components/bootstrap-datepicker/dist/locales/bootstrap-datepicker.zh-CN.min.js"></script>
    <script src="/Content/bower_components/pekeUpload/js/pekeUpload.js"></script>
    <script src="/Content/dist/js/vue-html5-editor.js"></script>
    <script src="/Content/bower_components/select2/dist/js/select2.full.min.js"></script>

    <script>
        var _Id = '@(ViewBag.Id)';
        var mydata = {
            Model: {},
            Category:[]
        }
        $.post('/Houses/GetModel', { id: _Id }, function (response) {
            mydata.Model = response;
        });
        $.post('/Categories/GetTreeListByParent', { layout: 'Zone', parentcate: '东北塘街道' }, function (response) {
            mydata.Category = response.datas;
        });
        var vm = new Vue({
            el: "#formArticleEdit",
            data: mydata,
            methods: {
                dosubmit: function () {
                    $.ajax({
                        url: '/Houses/InsertOrUpdate',
                        type: "POST",
                        data: mydata.Model,
                        success: function (data) {
                            if (data.code == 100)
                                toastr.success('保存成功！');
                            else
                                toastr.error(data.message);
                        }
                    });
                    return false;
                }
            }
        })
    </script>
}

