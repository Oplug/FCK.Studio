@model FCK.Studio.Core.Articles
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">@(Model.Title)</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <form id="formEdit">
            <div class="form-group">
                <label class="radio-inline">
                    <input type="radio" name="inlineRadioOptions" id="inlineRadio1" value="党员" v-model="PoliticalStatus"> 党员
                </label>
                <label class="radio-inline">
                    <input type="radio" name="inlineRadioOptions" id="inlineRadio2" value="社工" v-model="PoliticalStatus"> 社工
                </label>
                <label class="radio-inline">
                    <input type="radio" name="inlineRadioOptions" id="inlineRadio3" value="义工" v-model="PoliticalStatus"> 义工
                </label>
                <label class="radio-inline">
                    <input type="radio" name="inlineRadioOptions" id="inlineRadio3" value="其它" v-model="PoliticalStatus"> 其它
                </label>
            </div>
            <div class="form-group">
                <label for="UserName">姓名</label>
                <input type="text" class="form-control" id="UserName" v-model="UserName">
            </div>
            <div class="form-group">
                <label for="Address">联系地址</label>
                <input type="text" class="form-control" id="Address" v-model="Address">
            </div>
            <div class="form-group">
                <label for="Telphone">联系电话</label>
                <input type="tel" class="form-control" id="Telphone" v-model="Telphone">
            </div>

            <div class="form-group">
                <label for="Email">电子邮件</label>
                <input type="email" class="form-control" id="Email" v-model="Email">
            </div>
            <input type="hidden" v-model="ActvTitle">
            <input type="hidden" v-model="ActvID">
            <button type="button" class="btn btn-primary" v-on:click="dosubmit">提交</button>
        </form>
    </div>
    <div class="card-footer">
        <small></small>
    </div>
</div>

@section scripts{
    <script src="/Content/bower_components/jqueryconfirm/jquery-confirm.js"></script>
    <script>
        $(function () {
            var _id = '@(Model.Id)';
            var _tit = '@(Model.Title)';
            $.post('/Activity/GetModel/', { id: 0 }, function (response) {
                response.ActvID = _id;
                response.ActvTitle = _tit;
                var vue = new Vue({
                    el: "#formEdit",
                    data: function () { return response },
                    methods: {
                        dosubmit: function () {
                            if (response.UserName == null) {
                                $.alert('姓名必填哦！');
                                $('#UserName').focus();
                            }
                            else if (response.Address == null) {
                                $.alert('联系地址必填！'); $('#Address').focus();
                            }
                            else if (response.Telphone == null) {
                                $.alert('电话必填！'); $('#Telphone').focus();
                            }
                            else {
                                $.ajax({
                                    url: '/Activity/InsertOrUpdate',
                                    type: "POST",
                                    data: response,
                                    success: function (data) {
                                        if (data.code == 100) {
                                            $.alert('提交成功！感谢您的热心参与。');
                                        }
                                        else if (data.code == 101) {
                                            $.alert('不能重复报名。');
                                        }
                                        else if (data.code == 102) {
                                            $.alert('已超出报名限额。');
                                        }
                                        else if (data.code == 103) {
                                            $.alert('已过报名截止日期了哦！');
                                        }
                                        else {
                                            $.alert('发生系统错误！Detail:' + data.message);
                                        }
                                    }
                                });
                            }
                            return false;
                        }
                    }
                })
            });
        });
    </script>
}




