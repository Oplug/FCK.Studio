@model FCK.Studio.Core.Articles
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<article>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <h2>@(Model.Title)</h2>
                @(Html.Raw(Model.Contents))
                <p>
                    Poster by
                    <a href="#">@(Model.Author)</a>. Wright in
                    <span>@(Model.CreationTime.ToString("yyyy-MM-dd hh:mm:ss"))</span>.
                </p>
            </div>
        </div>
    </div>
</article>

