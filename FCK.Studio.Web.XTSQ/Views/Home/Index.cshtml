@section scripts{
    <script>
        var mydata = {
            NewsList: [],
            UserList: [],
            ApartList: [],
            ElectionList: [],
            UserCount: 0
        }
        var vm = new Vue({
            el: "#DataList",
            data: mydata,
            methods: {
                dovote: function (_id) {
                    $.post('/Election/DoVote', { id: _id }, function (data) {
                        if (data.code == 100)
                            toastr.success(data.message);
                        else
                            toastr.error(data.message);
                    });
                }
            }
        })
        $(function () {
            $.post('/Home/GetArticleList', { page: 1, pageSize: 3, keywords: '', cateindex: '社区动态', isrec: 1 }, function (response) {
                mydata.NewsList = response.datas;
            });
            $('.small-box').click(function () {
                var _href = $(this).data('href');
                window.location = _href;
            })
        });
    </script>
}

