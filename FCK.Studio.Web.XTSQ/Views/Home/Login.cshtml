
@{
    ViewBag.Title = "户籍登录";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content">
    <div class="login-box">
        <div class="login-logo">
            <a href="/Home/">户籍登录</a>
        </div>
        <div class="card">
            <div class="card-body login-card-body" id="formEdit">
                <p class="login-box-msg">注册登录自己的账号</p>
                <form action="/Home/Login" method="post">
                    <div class="form-group has-feedback">
                        <input type="email" class="form-control" v-model="UserName" placeholder="身份证号/用户名/邮箱">
                    </div>
                    <div class="form-group has-feedback">
                        <input type="password" class="form-control" v-model="Password" placeholder="6~12位密码">
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <div class="checkbox icheck">
                                <label>
                                    <input type="checkbox">  记住我
                                </label>
                            </div>
                        </div>
                        <div class="col-4">
                            <button type="button" class="btn btn-primary btn-block btn-flat" v-on:click="dosubmit">登录</button>
                        </div>
                    </div>
                </form>
                <div class="social-auth-links text-center mb-3">
                    <p>- OR -</p>
                    <a href="#" class="btn btn-block btn-primary">
                        <i class="fa fa-weixin mr-2"></i> 微信登录
                    </a>
                    <a href="#" class="btn btn-block btn-danger">
                        <i class="fa fa-qq mr-2"></i>QQ登录
                    </a>
                </div>
                <p class="mb-1">
                    <a href="#">忘记账号或密码</a>
                </p>
                <p class="mb-0">
                    <a href="/Home/Regist" class="text-center">户籍注册</a>
                </p>
            </div>
        </div>
    </div>
</section>
@section scripts{
    <script>
        var mydata = {
            UserName: null,
            Password: null
        }
        var vm = new Vue({
            el: "#formEdit",
            data: mydata,
            methods: {
                dosubmit: function () {
                    $.ajax({
                        url: '/Home/DoLogin',
                        type: "POST",
                        data: mydata,
                        success: function (data) {
                            if (data.code == 100)
                                toastr.success("登录成功");
                            else
                                toastr.error(data.message);
                        }
                    });
                    return false;
                }
            }
        })
        $(function () {
        });
    </script>
}




